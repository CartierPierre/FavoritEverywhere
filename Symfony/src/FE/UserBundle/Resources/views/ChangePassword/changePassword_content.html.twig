{% trans_default_domain 'FOSUserBundle' %}

<div class="jumbotron container">
        <h1>Mise Ã  jour du profil</h1>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <strong class="text-red">{{ form_errors(form.current_password) }}</strong>
                </div>
                {{ form_label(form.current_password, 'form.current_password'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <strong class="text-red">{{ form_errors(form.plainPassword.first) }}</strong>
                </div>
                {{ form_label(form.plainPassword.first, 'form.password'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <strong class="text-red">{{ form_errors(form.plainPassword.second) }}</strong>
                </div>
                {{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            
            {{ form_rest(form) }}
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" class="btn btn-danger" value="{{ 'change_password.submit'|trans }}" />
                </div>
            </div>