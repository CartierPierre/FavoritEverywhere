{% trans_default_domain 'FOSUserBundle' %}

<div class="fos_user_user_show">
    <table class="table">
        <tr>
            <td>{{ 'form.username'|trans }}</td>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <td>{{ 'form.email'|trans }}</td>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <td>{{ 'form.password'|trans }}</td>
            <td>
                <a href="{{ path('fos_user_change_password') }}" role="button" class="btn btn-danger">{{ 'change_password.submit'|trans }}</a>
            </td>
        </tr>
    </table>
</div>
