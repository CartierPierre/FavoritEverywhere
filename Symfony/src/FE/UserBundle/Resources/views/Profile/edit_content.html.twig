{% trans_default_domain 'FOSUserBundle' %}

<div class="jumbotron container">
    <h1>Mise Ã  jour du profil</h1>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <strong class="text-red">{{ form_errors(form.username) }}</strong>
            </div>
            {{ form_label(form.username, 'form.username'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}                
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <strong class="text-red">{{ form_errors(form.email) }}</strong>
            </div>
            {{ form_label(form.email, 'form.email'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <strong class="text-red">{{ form_errors(form.current_password) }}</strong>
            </div>
            {{ form_label(form.current_password, 'form.current_password'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-danger" type="submit" value="{{ 'profile.edit.submit'|trans }}"/>
            </div>
        </div>
    {{ form_end(form) }}
</div>