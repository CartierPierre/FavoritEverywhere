{% trans_default_domain 'FOSUserBundle' %}

<div class="jumbotron">
        <h1>Mise Ã  jour du profil</h1>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}
            
            <div class="form-group">
                {{ form_label(form.username, 'form.username'|trans) }}
                {{ form_errors(form.username) }}
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email, 'form.email'|trans) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(form.current_password, 'form.current_password'|trans) }}
                {{ form_errors(form.current_password) }}
                {{ form_widget(form.current_password, {'attr': {'class': 'form-control'}}) }}
            </div>

            {{ form_rest(form) }}
            <div class="form-group">
                <input class="btn btn-default" type="submit" value="{{ 'profile.edit.submit'|trans }}" />
            </div>
        {{ form_end(form) }}
</div>