{% trans_default_domain 'FOSUserBundle' %}

<div class="jumbotron container">
    <h1>{{ 'layout.register'|trans }}</h1>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <strong class="text-red">{{ form_errors(form.username) }}</strong>
            </div>
            {{ form_label(form.username, 'form.username'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}            
            <div class="col-sm-10">
                {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <strong class="text-red">{{ form_errors(form.email) }}</strong>
            </div>
            {{ form_label(form.email, 'form.email'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <strong class="text-red">{{ form_errors(form.plainPassword.first) }}</strong>
            </div>
            {{ form_label(form.plainPassword.first, 'form.password'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <strong class="text-red">{{ form_errors(form.plainPassword.second) }}</strong>
            </div>
            {{ form_label(form.plainPassword.second, 'form.password_confirmation'|trans, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        {{ form_rest(form) }}

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input class="btn btn-success" type="submit" value="{{ 'registration.submit'|trans }}" />
            </div>
        </div>
    {{ form_end(form) }}
</div>
