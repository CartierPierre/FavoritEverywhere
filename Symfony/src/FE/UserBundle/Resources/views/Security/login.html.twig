{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block title %} - {{ 'layout.login'|trans }}{% endblock title %}

{% block fos_user_content %}
<div class="jumbotron container">
    <h1>{{ 'layout.login'|trans }}</h1>
{#    #}{% if error %}
        <div class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
        </div>
{#    #}{% endif %}
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <label for="username" class="col-sm-2 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="col-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="_password" required="required" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-info" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
            </div>
        </div
    </form>
</div>
{% endblock fos_user_content %}